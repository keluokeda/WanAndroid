<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/toolbarBackgroundColor</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="ItemTitleTextTheme" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemTimeTextTheme" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ItemAuthorTextTheme" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="ItemCategoryTextTheme" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
    </style>
</resources>